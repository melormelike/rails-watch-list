<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_url("background.jpg") %>)">
  <div class="container">
    <h1>Movies <strong>you</strong> <strong>like!</strong>!</h1>
    <p>Make a list</p>
  </div>
</div>

<div class="cards">
    <% @lists.each do |list| %>
      <%if list.photo.attached?%>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path list.photo.key, height:300, width: 400, crop: :fill %>)">
      <% else %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1523207911345-32501502db22?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1770&q=80)">
      <% end %>
        <%= link_to list.name, list %>
      </div>
      <% end %>
  </div>
  <br>
  <br>
  <div class="btn btn-secondary">
    <%= link_to "Add a new movie list", new_list_path, class: "text-white text-decoration-none"%>
  </div>
</div>
