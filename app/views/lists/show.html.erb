   <h1>Category: <%= @list.name %></h1>

    <div class="container">
      <div class="row">
        <% @bookmarks.each do |bookmark| %>
          <div class="col-lg-4">
            <div class="card" style="width: 18rem;">

              <%= image_tag 'movie_3.jpg', crop: :fill %>

              <h5 class="card-title">Movie Title:<%= bookmark.movie.title %></h5>
              <p class="card-text"><%= bookmark.comment %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <br>
    <div class="btn btn-secondary">
      <%= link_to "Create a Bookmark", new_list_bookmark_path(@list) , class: "text-white text-decoration-none"%>
    </div>
    <div class="btn btn-secondary">
      <%= link_to "Back to Lists", lists_path, class: "text-white text-decoration-none"%>
    </div>
